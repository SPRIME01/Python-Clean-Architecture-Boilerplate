# Auto-detect text files and normalize line endings
* text=auto

# Force LF for specific file types
*.py text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.sh text eol=lf

# Binary files (explicitly declare as non-text)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.svg binary

# Merge strategies
pyproject.toml merge=union
.pre-commit-config.yaml merge=union
.github/workflows/*.yml merge=union

# Documentation handling
docs/* linguist-generated=true

# Windows-specific protection
*.bat text eol=crlf
